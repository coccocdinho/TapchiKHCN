.pagination {
    display: inline-block;
    margin-top: 10px;
    margin-bottom: 10px;
    float: right;
}

.pagination a {
    color: black;
    float: left;
    padding: 8px 16px;
    text-decoration: none;
    transition: background-color .3s;
}

.pagination a.active {
    background-color: rgb(0, 151, 204);
    color: white;
}

.pagination a:hover:not(.active) {background-color: #ddd;}